<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/bar_background">

        <ImageView
            android:id="@+id/imageView11"
            style="@style/GraySquare"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="0dp"
            android:contentDescription="@string/gray_square"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/BoldTextView"
            android:text="@string/photo"
            android:textSize="82sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="@+id/imageView11"
            app:layout_constraintStart_toStartOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView11" />

        <TextView
            android:id="@+id/textView9"
            style="@style/WhiteText"
            android:text="@string/certificated"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView12"
            style="@style/ImageStyle"
            android:contentDescription="@string/like"
            android:src="@drawable/ic_baseline_favorite_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView13" />

        <ImageView
            android:id="@+id/imageView13"
            style="@style/ImageStyle"
            android:contentDescription="@string/bookmark"
            android:src="@drawable/ic_baseline_bookmark_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView14" />

        <ImageView
            android:id="@+id/imageView14"
            style="@style/ImageStyle"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView11"
            android:contentDescription="@string/share" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/bar_background">

            <ImageView
                android:id="@+id/imageView21"
                style="@style/GraySquare"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="0dp"
                android:contentDescription="@string/gray_square"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView29"
                style="@style/WhiteText"
                android:text="@string/layouts"
                app:layout_constraintBottom_toBottomOf="@+id/imageView21"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView22"
                style="@style/ImageStyle"
                android:contentDescription="@string/like"
                android:src="@drawable/ic_baseline_favorite_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView23" />

            <ImageView
                android:id="@+id/imageView23"
                style="@style/ImageStyle"
                android:contentDescription="@string/bookmark"
                android:src="@drawable/ic_baseline_bookmark_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView24" />

            <ImageView
                android:id="@+id/imageView24"
                style="@style/ImageStyle"
                android:src="@drawable/ic_baseline_share_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView21"
                android:contentDescription="@string/share" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/bar_background">

            <ImageView
                android:id="@+id/imageView31"
                style="@style/GraySquare"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="0dp"
                android:contentDescription="@string/gray_square"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView39"
                style="@style/WhiteText"
                android:text="@string/views"
                app:layout_constraintBottom_toBottomOf="@+id/imageView31"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView32"
                style="@style/ImageStyle"
                android:contentDescription="@string/like"
                android:src="@drawable/ic_baseline_favorite_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView33" />

            <ImageView
                android:id="@+id/imageView33"
                style="@style/ImageStyle"
                android:contentDescription="@string/bookmark"
                android:src="@drawable/ic_baseline_bookmark_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView34" />

            <ImageView
                android:id="@+id/imageView34"
                style="@style/ImageStyle"
                android:src="@drawable/ic_baseline_share_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView31"
                android:contentDescription="@string/share" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>
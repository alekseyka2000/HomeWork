<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="250dp">

    <TextView
        android:id="@+id/photoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@color/gray"
        android:gravity="center"
        android:text="@string/photo"
        android:textColor="@color/black"
        android:textSize="72sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/photoText"
        android:layout_alignRight="@+id/photoText"
        android:layout_alignBottom="@+id/photoText"
        android:layout_gravity="bottom"
        android:contentDescription="@string/photo"
        android:padding="16dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_baseline_photo_camera_24" />

    <EditText
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/priceText"
        android:layout_margin="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/title"
        tools:ignore="LabelFor,TextFields" />

    <EditText
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_margin="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/price"
        tools:ignore="LabelFor,TextFields" />

    <EditText
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:layout_toEndOf="@+id/priceText"
        android:layout_toRightOf="@+id/priceText"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/location"
        tools:ignore="LabelFor,TextFields" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inventoryText"
        android:layout_margin="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/description"
        tools:ignore="LabelFor,TextFields" />

    <EditText
        android:id="@+id/inventoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/inventory"
        tools:ignore="LabelFor,TextFields" />

    <EditText
        android:id="@+id/weightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_margin="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/weight"
        tools:ignore="LabelFor,RelativeOverlap,TextFields" />

</RelativeLayout>
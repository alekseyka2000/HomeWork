<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="100dp">

    <TextView
        android:id="@+id/photoText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@color/gray"
        android:gravity="center"
        android:text="@string/photo"
        android:textColor="@color/black"
        android:textSize="72sp"
        app:layout_constraintBottom_toTopOf="@id/titleText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:contentDescription="@string/photo"
        android:padding="16dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_baseline_photo_camera_24"
        app:layout_constraintBottom_toBottomOf="@+id/photoText"
        app:layout_constraintRight_toRightOf="@+id/photoText" />

    <EditText
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="bottom"
        android:text="@string/title"
        app:layout_constraintBottom_toTopOf="@id/priceText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoText"
        app:layout_constraintVertical_weight="1"
        android:importantForAutofill="no"
        tools:ignore="LabelFor,TextFields" />

    <EditText
        android:id="@+id/priceText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/price"
        app:layout_constraintBottom_toTopOf="@id/description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/locationText"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        tools:ignore="LabelFor,TextFields"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <EditText
        android:id="@+id/locationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/location"
        app:drawableRightCompat="@drawable/ic_baseline_location_on_24"
        app:layout_constraintBottom_toTopOf="@id/description"
        app:layout_constraintLeft_toRightOf="@id/priceText"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="LabelFor,TextFields"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="2"
        android:layout_marginEnd="16dp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/description"
        app:layout_constraintBottom_toTopOf="@id/inventoryText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceText"
        tools:ignore="LabelFor,TextFields"
        app:layout_constraintVertical_weight="1"/>

    <EditText
        android:id="@+id/inventoryText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/inventory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:ignore="LabelFor,TextFields"
        app:layout_constraintVertical_weight="1"/>
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@id/weightText"
        app:layout_constraintLeft_toRightOf="@id/inventoryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/weightText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="bottom"
        android:importantForAutofill="no"
        android:text="@string/weight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:ignore="LabelFor,TextFields"
        app:layout_constraintVertical_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>